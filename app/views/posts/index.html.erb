<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Circle</th>
      <th>User</th>
      <th>Medical</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.description %></td>
        <td><%= post.circle %></td>
        <td><%= post.user %></td>
        <td><%= post.medical %></td>
        <td><%= link_to 'Show', circle_post_path(@circle, post) %></td>
        <td><%= link_to 'Edit', edit_circle_post_path(@circle, post) %></td>
        <td><%= link_to 'Destroy', circle_post_path(@circle, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_circle_post_path %>
