<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Expiration date</th>
      <th>Completed</th>
      <th>Completed by</th>
      <th>Category</th>
      <th>Created by</th>
      <th>Task generator</th>
      <th>Circle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.expiration_date %></td>
        <td><%= task.completed %></td>
        <td><%= task.completed_by_id %></td>
        <td><%= task.category %></td>
        <td><%= task.created_by_id %></td>
        <td><%= task.task_generator %></td>
        <td><%= task.circle %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

